    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <AuthorizeView Roles="teacher">
                <Authorized>
                    <NavLink class="nav-link" href="/teacher/students">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> students
                    </NavLink>
                </Authorized>
            </AuthorizeView>

        </li>
        <li class="nav-item px-3">
            <AuthorizeView Roles="teacher">
                <Authorized>
                    <NavLink class="nav-link" href="/teacher/exams">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> exams
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </li>
        <li class="nav-item px-3">
            <AuthorizeView Roles="teacher">
                <Authorized>
                    <NavLink class="nav-link" href="/teacher/questions">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> questions
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </li>
        <li class="nav-item px-3">
            <AuthorizeView Roles="student">
                <Authorized>
                    <NavLink class="nav-link" href="/student/studentExams">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> exams
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </li>
        <li class="nav-item px-3">
            <AuthorizeView Roles="student">
                <Authorized>
                    <NavLink class="nav-link" href="/student/marks">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> marks
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/class" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Class practice
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
